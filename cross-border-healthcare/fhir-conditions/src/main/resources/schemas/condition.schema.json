{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FHIR Condition Resource",
  "type": "object",
  "required": ["resourceType", "id", "subject", "code", "onsetDateTime"],
  "properties": {
    "resourceType": {
      "type": "string",
      "enum": ["Condition"]
    },
    "id": {
      "type": "string"
    },
    "subject": {
      "type": "object",
      "properties": {
        "reference": { "type": "string" }
      },
      "required": ["reference"]
    },
    "code": {
      "type": "object",
      "properties": {
        "coding": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "system": { "type": "string" },
              "code": { "type": "string" },
              "display": { "type": "string" }
            },
            "required": ["system", "code"]
          }
        },
        "text": { "type": "string" }
      },
      "required": ["coding"]
    },
    "onsetDateTime": {
      "type": "string",
      "format": "date-time"
    }
  }
}
