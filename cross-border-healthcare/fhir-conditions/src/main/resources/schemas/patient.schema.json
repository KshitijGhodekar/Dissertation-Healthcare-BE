{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FHIR Patient Resource",
  "type": "object",
  "required": ["resourceType", "id", "name", "gender", "birthDate"],
  "properties": {
    "resourceType": {
      "type": "string",
      "enum": ["Patient"]
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "use": { "type": "string" },
          "family": { "type": "string" },
          "given": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["family", "given"]
      }
    },
    "gender": {
      "type": "string",
      "enum": ["male", "female", "other", "M", "F", "unknown"]
    },
    "birthDate": {
      "type": "string",
      "format": "date"
    }
  }
}
